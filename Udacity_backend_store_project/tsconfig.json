{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
         "types": ["jasmine", "node"]
    },
    "include": [
        "src/**/*.ts",
        "spec/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}